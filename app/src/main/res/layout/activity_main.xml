<?xml version="1.0" encoding="utf-8"?>
<com.base.lib.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">
    <com.base.lib.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            style="@style/normal_text_style"
            android:textColor="#C8C1DE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="5G Peak Rate"/>
        <com.tools.speedlib.views.AwesomeSpeedView
            android:id="@+id/speedometer"
            android:layout_width="731px"
            android:layout_height="731px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="127dp"
            app:sv_endDegree="405"
            android:background="@drawable/bg_meter"/>
        <com.base.lib.autolayout.AutoLinearLayout
            android:layout_width="800px"
            android:layout_height="209px"
            android:orientation="horizontal"
            android:background="@drawable/bg_speed">
            <com.base.lib.autolayout.AutoLinearLayout
                android:layout_width="303px"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="15px"
                android:orientation="vertical">
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Download"
                    android:textColor="#C8C1DE"
                    android:layout_marginTop="-10px"
                    android:textSize="@dimen/text_size_36" />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="下载速度"
                    android:textColor="#C8C1DE"
                    android:textSize="@dimen/text_size_20" />
                <TextView
                    android:id="@+id/tx_delay"
                    style="@style/normal_white_text_style"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="#C8C1DE"
                    android:textSize="@dimen/text_size_44" />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Mbps"
                    android:textColor="@color/speed_text_color"
                    android:textSize="@dimen/text_size_20" />
            </com.base.lib.autolayout.AutoLinearLayout>
            <com.base.lib.autolayout.AutoLinearLayout
                android:layout_width="350px"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="15px"
                android:orientation="vertical">
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Upload"
                    android:textColor="#C8C1DE"
                    android:layout_marginTop="-10px"
                    android:textSize="@dimen/text_size_36" />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="上传速度"
                    android:textColor="#C8C1DE"
                    android:textSize="@dimen/text_size_20" />
                <TextView
                    android:id="@+id/tx_down"
                    style="@style/normal_white_text_style"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/speed_text_color"
                    android:textSize="@dimen/text_size_44"  />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Mbps"
                    android:textColor="@color/speed_text_color"
                    android:textSize="@dimen/text_size_20" />
            </com.base.lib.autolayout.AutoLinearLayout>
            <com.base.lib.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Ping"
                    android:textColor="#C8C1DE"
                    android:layout_marginTop="-10px"
                    android:textSize="@dimen/text_size_36" />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="延时"
                    android:textColor="#C8C1DE"
                    android:textSize="@dimen/text_size_20" />
                <TextView
                    android:id="@+id/tx_up"
                    style="@style/normal_white_text_style"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/speed_text_color"
                    android:textSize="@dimen/text_size_44"  />
                <TextView
                    style="@style/normal_white_text_style"
                    android:text="Mbps"
                    android:textColor="@color/speed_text_color"
                    android:textSize="@dimen/text_size_20" />
            </com.base.lib.autolayout.AutoLinearLayout>
        </com.base.lib.autolayout.AutoLinearLayout>
    </com.base.lib.autolayout.AutoLinearLayout>
    <LinearLayout
        android:id="@+id/start_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/bg_start"
        android:layout_marginBottom="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="24sp"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
</com.base.lib.autolayout.AutoRelativeLayout>
